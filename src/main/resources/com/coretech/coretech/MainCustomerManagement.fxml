<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextArea?>

<BorderPane prefWidth="800" prefHeight="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.coretech.coretech.MainCustomerController">
    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #2293C3; -fx-padding: 10;" HBox.hgrow="ALWAYS">
            <Label alignment="CENTER" maxWidth="Infinity" style="-fx-font-size: 25px; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-family: Inder;" text="Manage Customer" textAlignment="CENTER" HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox minWidth="150.0" maxWidth="250.0" spacing="12" style="-fx-background-color: white; -fx-border-color: #2293C3;" VBox.vgrow="ALWAYS">
            <ImageView fitHeight="72.0" fitWidth="143.0" preserveRatio="true">
                <Image url="@../../../Images/BlackVersion.png" />
                <VBox.margin>
                    <Insets left="30.0" />
                </VBox.margin>
                <effect>
                    <DropShadow offsetY="2.0">
                        <color>
                            <Color opacity="0.5896656513214111" />
                        </color>
                    </DropShadow>
                </effect>
            </ImageView>
            <Label style="-fx-font-size: 14px; -fx-text-fill: black;" text="Welcome, Name">
                <VBox.margin>
                    <Insets bottom="30.0" left="50.0" />
                </VBox.margin>
            </Label>

            <!-- Home Button -->
            <Button onAction="#handleHome" style="-fx-background-color: white; -fx-text-fill: #000000; -fx-alignment: center-left;" text="Home" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="10"> <!-- Add spacing between icon and text -->
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <Image url="@../../../Images/icons/home.png" />
                            <HBox.margin>
                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                            </HBox.margin>
                        </ImageView>
                    </HBox>
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Button>

            <!-- Customer Management Button -->
            <Button onAction="#handleCustomerManagement" style="-fx-background-color: #FFFFFF; -fx-text-fill: #000000; -fx-alignment: center-left;" text="Customer Management" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <Image url="@../../../Images/icons/people.png" />
                            <HBox.margin>
                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                            </HBox.margin>
                        </ImageView>
                    </HBox>
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Button>

            <!-- Vehicle Management Button -->
            <Button onAction="#handleVehicleManagement" style="-fx-background-color: #A7DAF8; -fx-text-fill: #000000; -fx-alignment: center-left;" text="Vehicle Management" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <Image url="@../../../Images/icons/car.png" />
                            <HBox.margin>
                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                            </HBox.margin>
                        </ImageView>
                    </HBox>
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Button>

            <!-- Appointments Button -->
            <Button onAction="#handleAppointments" style="-fx-background-color: #FFFFFF; -fx-text-fill: #000000; -fx-alignment: center-left;" text="Appointments" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <Image url="@../../../Images/icons/appointment.png" />
                            <HBox.margin>
                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                            </HBox.margin>
                        </ImageView>
                    </HBox>
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Button>

            <!-- Spacer and Servicing Button -->
            <VBox fx:id="spacer" VBox.vgrow="ALWAYS">
                <children>
                    <Button onAction="#handleServicing" style="-fx-background-color: #FFFFFF; -fx-text-fill: #000000; -fx-alignment: center-left;" text="Servicing" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                        <graphic>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                    <Image url="@../../../Images/icons/service.png" />
                                    <HBox.margin>
                                        <Insets right="10.0" /> <!-- Add right padding to the icon -->
                                    </HBox.margin>
                                </ImageView>
                            </HBox>
                        </graphic>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                        </padding>
                    </Button>
                </children>
            </VBox>

            <!-- Log Out Button -->
            <Button onAction="#handleLogout" style="-fx-background-color: #2293C3; -fx-text-fill: white; -fx-font-weight: bold;" text="Log Out" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <graphic>
                    <HBox alignment="CENTER_LEFT" spacing="10"> <!-- Add spacing between icon and text -->
                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                            <Image url="@../../../Images/icons/logout-white.png" />
                            <HBox.margin>
                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                            </HBox.margin>
                        </ImageView>
                    </HBox>
                </graphic>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </Button>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <BorderPane>
            <!-- Content Pane -->
            <center>
                <StackPane fx:id="contentPane" style="-fx-background-color: #EFEFEF; -fx-border-color: #2293C3; -fx-border-width: 0 0 1 0;">
                    <!-- Add Customer Form -->
                    <VBox fx:id="addCustomerForm" alignment="CENTER" spacing="25" style="-fx-padding: 30; -fx-background-color: #EFEFEF;" visible="false" managed="false">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2293C3;" text="Add Customer" />

                        <!-- Customer Name -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Customer Name:" />
                            <TextField fx:id="addCustomerNameField" prefHeight="30.0" prefWidth="234.0" promptText="Enter Customer Name" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Phone No -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Phone No:" />
                            <TextField fx:id="addPhoneNoField" promptText="Enter Phone No" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Email -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Email:" />
                            <TextField fx:id="addEmailField" promptText="Enter Email" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Address -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Address:" />
                            <TextArea fx:id="addAddressField" prefHeight="100.0" prefWidth="250.0" promptText="Enter Address" style="-fx-font-size: 14px;" />
                        </HBox>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="40" style="-fx-padding: 30;">
                            <Button fx:id="addButton" onAction="#handleAdd" style="-fx-background-color: #198B2C; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40;" text="ADD">
                                <graphic>
                                    <HBox alignment="CENTER_LEFT" spacing="10"> <!-- Add spacing between icon and text -->
                                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                            <Image url="@../../../Images/icons/add-white.png" /> <!-- Path to your add icon -->
                                            <HBox.margin>
                                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                                            </HBox.margin>
                                        </ImageView>
                                    </HBox>
                                </graphic>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </Button>

                            <Button fx:id="cancelAddButton" onAction="#handleCancelAdd" style="-fx-background-color: #2293C3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40;" text="CANCEL">
                                <graphic>
                                    <HBox alignment="CENTER_LEFT" spacing="10"> <!-- Add spacing between icon and text -->
                                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                            <Image url="@../../../Images/icons/cancle.png" /> <!-- Path to your cancel icon -->
                                            <HBox.margin>
                                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                                            </HBox.margin>
                                        </ImageView>
                                    </HBox>
                                </graphic>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Update Customer Form -->
                    <VBox fx:id="updateCustomerForm" alignment="CENTER" spacing="25" style="-fx-padding: 30; -fx-background-color: #EFEFEF;" visible="false" managed="false">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2293C3;" text="Update Customer" />

                        <!-- Search Bar -->
                        <HBox alignment="CENTER" spacing="10">
                            <TextField fx:id="updateSearchField" prefHeight="30.0" promptText="Search Customer" style="-fx-font-size: 12px; -fx-pref-width: 250; -fx-max-width: 300;" HBox.hgrow="ALWAYS" />
                            <Button fx:id="updateSearchButton" onAction="#handleUpdateSearch" style="-fx-background-color: #2293C3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-pref-width: 80; -fx-pref-height: 30;" text="SEARCH" />
                        </HBox>

                        <!-- Customer Name -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Customer Name:" />
                            <TextField fx:id="updateCustomerNameField" prefHeight="30.0" prefWidth="234.0" promptText="Enter Customer Name" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Phone No -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Phone No:" />
                            <TextField fx:id="updatePhoneNoField" promptText="Enter Phone No" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Email -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Email:" />
                            <TextField fx:id="updateEmailField" promptText="Enter Email" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Address -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Address:" />
                            <TextArea fx:id="updateAddressField" prefHeight="100.0" prefWidth="250.0" promptText="Enter Address" style="-fx-font-size: 14px;" />
                        </HBox>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="40" style="-fx-padding: 30;">
                            <Button fx:id="updateButton" style="-fx-background-color: #5CB85C; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40;" text="UPDATE" >
                                <graphic>
                                    <HBox alignment="CENTER_LEFT" spacing="10"> <!-- Add spacing between icon and text -->
                                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                            <Image url="@../../../Images/icons/update.png" /> <!-- Path to your update icon -->
                                            <HBox.margin>
                                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                                            </HBox.margin>
                                        </ImageView>
                                    </HBox>
                                </graphic>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </Button>
                            <Button fx:id="cancelUpdateButton" style="-fx-background-color: #2293C3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40;" text="CANCEL">
                                <graphic>
                                    <HBox alignment="CENTER_LEFT" spacing="10"> <!-- Add spacing between icon and text -->
                                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                            <Image url="@../../../Images/icons/cancle.png" /> <!-- Path to your cancel icon -->
                                            <HBox.margin>
                                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                                            </HBox.margin>
                                        </ImageView>
                                    </HBox>
                                </graphic>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Delete Customer Form -->
                    <VBox fx:id="deleteCustomerForm" alignment="CENTER" spacing="25" style="-fx-padding: 30; -fx-background-color: #EFEFEF;" visible="false" managed="false">
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2293C3;" text="Delete Customer" />

                        <!-- Search Bar -->
                        <HBox alignment="CENTER" spacing="10">
                            <TextField fx:id="deleteSearchField" prefHeight="30.0" promptText="Search Customer" style="-fx-font-size: 12px; -fx-pref-width: 250; -fx-max-width: 300;" HBox.hgrow="ALWAYS" />
                            <Button fx:id="deleteSearchButton" onAction="#handleDeleteSearch" style="-fx-background-color: #2293C3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px; -fx-pref-width: 80; -fx-pref-height: 30;" text="SEARCH" />
                        </HBox>

                        <!-- Customer Name -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Customer Name:" />
                            <TextField fx:id="deleteCustomerNameField" prefHeight="30.0" prefWidth="234.0" promptText="Enter Customer Name" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Phone No -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Phone No:" />
                            <TextField fx:id="deletePhoneNoField" promptText="Enter Phone No" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Email -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Email:" />
                            <TextField fx:id="deleteEmailField" promptText="Enter Email" style="-fx-pref-width: 250; -fx-font-size: 14px;" />
                        </HBox>

                        <!-- Address -->
                        <HBox alignment="CENTER" spacing="20">
                            <Label style="-fx-font-size: 16px; -fx-text-fill: black; -fx-min-width: 120;" text="Address:" />
                            <TextArea fx:id="deleteAddressField" prefHeight="100.0" prefWidth="250.0" promptText="Enter Address" style="-fx-font-size: 14px;" />
                        </HBox>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="40" style="-fx-padding: 30;">
                            <Button fx:id="deleteButton" style="-fx-background-color: #D9534F; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40;" text="DELETE">
                                <graphic>
                                    <HBox alignment="CENTER_LEFT" spacing="10"> <!-- Add spacing between icon and text -->
                                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                            <Image url="@../../../Images/icons/remove.png" /> <!-- Path to your remove icon -->
                                            <HBox.margin>
                                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                                            </HBox.margin>
                                        </ImageView>
                                    </HBox>
                                </graphic>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </Button>
                            <Button fx:id="cancelDeleteButton" style="-fx-background-color: #2293C3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-pref-width: 120; -fx-pref-height: 40;" text="CANCEL">
                                <graphic>
                                    <HBox alignment="CENTER_LEFT" spacing="10"> <!-- Add spacing between icon and text -->
                                        <ImageView fitHeight="20.0" fitWidth="20.0" preserveRatio="true">
                                            <Image url="@../../../Images/icons/cancle.png" /> <!-- Path to your cancel icon -->
                                            <HBox.margin>
                                                <Insets right="10.0" /> <!-- Add right padding to the icon -->
                                            </HBox.margin>
                                        </ImageView>
                                    </HBox>
                                </graphic>
                                <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                </padding>
                            </Button>
                        </HBox>
                    </VBox>
                </StackPane>
            </center>

            <!-- Navigation Buttons at the Bottom -->
            <bottom>
                <!-- Navigation Buttons at the Bottom -->
                <HBox alignment="CENTER" spacing="20" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #2293C3;">
                    <Button fx:id="addCustomerButton" onAction="#showAddCustomerForm" prefHeight="40" prefWidth="150" style="-fx-background-color: #2293C3; -fx-text-fill: white; -fx-font-weight: bold;" text="Add a Customer" />
                    <Button fx:id="updateCustomerButton" onAction="#showUpdateCustomerForm" prefHeight="40" prefWidth="200" style="-fx-background-color: #FFFFFF; -fx-text-fill: #2293C3; -fx-border-color: #2293C3; -fx-border-width: 2px; -fx-font-weight: bold;" text="Update Customer Details" />
                    <Button fx:id="deleteCustomerButton" onAction="#showDeleteCustomerForm" prefHeight="40" prefWidth="180" style="-fx-background-color: #FFFFFF; -fx-text-fill: #2293C3; -fx-border-color: #2293C3; -fx-border-width: 2px; -fx-font-weight: bold;" text="Remove a Customer" />
                </HBox>
            </bottom>
        </BorderPane>
    </center>
</BorderPane>